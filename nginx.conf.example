# put this file in /etc/nginx/conf.d/streamer.conf
upstream puma_server {
    server unix:/tmp/itunes-streamer.sock fail_timeout=0;
}

server {
    server_name         [DOMAIN NAME HERE];
    ssl_certificate     /path/to/ssl.crt;
    ssl_certificate_key /path/to/ssl.key;

    root /home/user/streamer/server;
    listen 20600 ssl;
    client_max_body_size 1G;
    keepalive_timeout 5;

    location / {
        try_files $uri @app;
    }

    location /accel/music/ {
        alias /home/user/streamer/music/;
        internal;
    }

    location /accel/artwork/ {
        alias /home/user/streamer/artwork/;
        internal;
    }

    location @app {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://puma_server;
        proxy_max_temp_file_size 0;
        proxy_read_timeout 600;
        proxy_send_timeout 600;
        proxy_buffering off;
    }
}
